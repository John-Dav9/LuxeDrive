        </div>
        <div class="col-md-2">
          <%= f.submit "Filtrer", class: "btn btn-primary w-100" %>
        </div>
        <div class="col-md-2">
          <%= link_to "RÃ©initialiser", super_admin_users_path, class: "btn btn-outline-secondary w-100" %>
